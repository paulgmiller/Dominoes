<Page
    x:Class="Dominoes.GameTable"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Dominoes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="120"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="Table" Grid.Row="0" FontFamily="Consolas" FontSize="20" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Dominoes" VerticalAlignment="Top" />
        <ScrollViewer x:Name="ScrollLog"   HorizontalScrollBarVisibility="Auto" Height="Auto" Grid.Row="1">
            <TextBlock x:Name="Log"  FontFamily="Consolas" FontSize="20" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Log" VerticalAlignment="Top" />
        </ScrollViewer>
    </Grid>
</Page>